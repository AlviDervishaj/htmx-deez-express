if songs && songs.length > 0
    for song in songs
      li.w-60.h-fit.p-2.truncate(value=song.id)
        img.w-60.h-60.aspect-square(src=song.thumbnail alt=song.title)
        a.text-xl.tracking-wider.py-4.text-sky-400.truncate(href=song.url)= song.title
        p= song.release_date

    input.hidden(type="hidden" value= songs[songs.length - 1].id name="id")
else
  p.tracking-wide.text-lg Press the button above to get some recommendations...

